<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BMath"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    StartupUri="Layers\FrontEnd\MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="FontFamily">Arial</FontFamily>
        <sys:Double x:Key="FontSize">16</sys:Double>
        
        <Color x:Key="BaseColor">Purple</Color>
        <SolidColorBrush x:Key="BaseBrush" Color="{StaticResource BaseColor}"/>

        <Color x:Key="BackgroundColor">White</Color>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        
        <Color x:Key="FontColor">White</Color>
        <SolidColorBrush x:Key="FontBrush" Color="{StaticResource FontColor}"/>
    </Application.Resources>
</Application>
